{% extends "base.html" %}

{% block title %}My Borrowed Books - BookLoop{% endblock %}


{% block content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-8">
    <!-- Page Header -->
    <div class="mb-6 sm:mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center space-y-4 sm:space-y-0 sm:space-x-4 mb-4">
            <div
                class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                    </path>
                </svg>
            </div>
            <div>
                <h1 class="text-2xl sm:text-3xl font-playfair font-bold text-gray-900">My Borrowed Books</h1>
                <p class="text-sm sm:text-base text-gray-600">Track your borrowed books and return dates</p>
            </div>
        </div>
    </div>

    {% if b %}
    <!-- Stats Cards -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-6 mb-6 sm:mb-8">
        <div class="bg-white rounded-xl shadow-lg p-4 sm:p-6">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                <div class="mb-2 sm:mb-0">
                    <p class="text-xs sm:text-sm font-medium text-gray-600">Total Borrowed</p>
                    <p class="text-xl sm:text-2xl font-bold text-gray-900">{{ b|length }}</p>
                </div>
                <div
                    class="w-8 h-8 sm:w-10 sm:h-10 bg-blue-100 rounded-lg flex items-center justify-center self-end sm:self-auto">
                    <svg class="w-4 h-4 sm:w-5 sm:h-5 text-primary" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253">
                        </path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-4 sm:p-6">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                <div class="mb-2 sm:mb-0">
                    <p class="text-xs sm:text-sm font-medium text-gray-600">Currently Reading</p>
                    <p class="text-xl sm:text-2xl font-bold text-green-600">
                        {{currently_reading}}
                    </p>
                </div>
                <div
                    class="w-8 h-8 sm:w-10 sm:h-10 bg-green-100 rounded-lg flex items-center justify-center self-end sm:self-auto">
                    <svg class="w-4 h-4 sm:w-5 sm:h-5 text-green-600" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-4 sm:p-6 col-span-2 lg:col-span-1">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                <div class="mb-2 sm:mb-0">
                    <p class="text-xs sm:text-sm font-medium text-gray-600">Returned</p>
                    <p class="text-xl sm:text-2xl font-bold text-blue-600">
                        {{total_returned}}
                    </p>
                </div>
                <div
                    class="w-8 h-8 sm:w-10 sm:h-10 bg-blue-100 rounded-lg flex items-center justify-center self-end sm:self-auto">
                    <svg class="w-4 h-4 sm:w-5 sm:h-5 text-blue-600" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Books Table/Cards -->
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
        <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Borrow History</h3>
        </div>

        <!-- Desktop Table View -->
        <div class="hidden lg:block overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Borrow ID
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Book Details
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Remaining Day
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Borrow Date
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Return By
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Return Date
                        </th>

                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for r in b %}
                    <tr class="hover:bg-gray-50 transition-colors duration-200">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{ r.id }}</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center space-x-4">
                                <div class="w-16 h-20 flex-shrink-0 rounded-lg overflow-hidden">
                                    <img src="{{ r.book.book_image.url }}" alt="{{ r.book.title }}"
                                        class="w-full h-full object-cover">
                                </div>
                                <div>
                                    <div class="text-sm font-medium text-gray-900">{{ r.book.title }}</div>
                                    <div class="text-sm text-gray-500">{{ r.book.author }}</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">
                                {{ r.remaining_days}} days
                            </div>
                        </td>

                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">{{ r.borrow_date|date:"M d, Y" }}</div>
                            <div class="text-sm text-gray-500">{{ r.borrow_date|time:"g:i A" }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">{{ r.due_date|date:"M d, Y" }}</div>
                            <div class="text-sm text-gray-500">{{ r.due_date|time:"g:i A" }}</div>
                        </td>

                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if r.return_status != "Not" %}
                            <div class="flex items-center space-x-2">
                                <span
                                    class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-medium bg-green-100 text-green-800">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    Returned on {{ r.return_date|date:"M d, Y" }} at {{ r.return_date|time:"g:i A" }}
                                </span>
                            </div>
                            {% if r.review_status %}
                            <div class="justify-center flex my-[10px]">
                                <a 
                                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-lime-600 hover:bg-red-700 transition-colors duration-200">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                                </svg>
                                Already Reviewed
                            </a>
                            </div>
                            {%else%}
                            <div class="justify-center flex my-[10px]">
                                <a onclick="review_modal.showModal()"
                                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-lime-600 hover:bg-red-700 transition-colors duration-200">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                                </svg>
                                Review Now
                            </a>
                            
<dialog id="review_modal" class="modal">
                            <div
                                class="modal-box w-11/12 max-w-3xl bg-white text-black rounded-2xl shadow-lg flex flex-col"
                            >
                                <h3 class="text-2xl font-semibold mb-4 text-gray-800">Write a Review</h3>

                                <!-- Scrollable Area -->
                                <div class="overflow-y-auto max-h-[65vh] pr-2">
                                <form action="{% url 'create_review' r.id %}" method="POST" enctype="multipart/form-data" class="space-y-4">
                                    <!-- Rating Section -->
                                    {% csrf_token %}
                                    <div>
                                    <label class="block font-medium mb-2 text-gray-700">Your Rating:</label>
                                    <div id="starRating" class="flex gap-2 text-2xl cursor-pointer text-gray-400">
                                        <span class="star" data-value="1">â˜…</span>
                                        <span class="star" data-value="2">â˜…</span>
                                        <span class="star" data-value="3">â˜…</span>
                                        <span class="star" data-value="4">â˜…</span>
                                        <span class="star" data-value="5">â˜…</span>
                                    </div>
                                    <input type="hidden" name="rating" id="ratingValue" required>
                                    </div>

                                    <!-- Comment Section -->
                                    <div>
                                    <label class="block font-medium mb-2 text-gray-700">Your Comment:</label>
                                    <textarea
                                        name="comment"
                                        class="textarea textarea-bordered w-full bg-gray-50 text-gray-900"
                                        placeholder="Write your review..."
                                        rows="4"
                                        required
                                    ></textarea>
                                    </div>

                                    <!-- Image Upload -->
                                    <div>
                                    <label class="block font-medium mb-2 text-gray-700">Attach Image:</label>
                                    <div class="flex items-center gap-3">
                                        <label
                                        for="imageUpload"
                                        class="flex items-center gap-2 cursor-pointer px-4 py-2 rounded-lg border border-gray-300 hover:bg-gray-100 transition"
                                        >
                                        ðŸ“Ž <span>Choose File</span>
                                        </label>
                                        <input type="file" id="imageUpload" name="review_image" accept="image/*" class="hidden" />
                                        <span id="fileName" class="text-sm text-gray-600"></span>
                                    </div>
                                    </div>

                                    <!-- Submit -->
                                    <div class="flex justify-end mt-6">
                                    <button
                                        type="submit"
                                        class="px-5 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg shadow-md transition"
                                    >
                                        Submit Review
                                    </button>
                                    </div>
                                </form>
                                </div>
                            </div>

                            <!-- Backdrop -->
                            <form method="dialog" class="modal-backdrop">
                                <button>close</button>
                            </form>

                            <script>
                                // â­ Star rating logic
                                const stars = document.querySelectorAll(".star");
                                const ratingInput = document.getElementById("ratingValue");
                                stars.forEach((star, index) => {
                                star.addEventListener("click", () => {
                                    ratingInput.value = index + 1;
                                    stars.forEach((s, i) => {
                                    s.style.color = i <= index ? "gold" : "gray";
                                    });
                                });
                                });

                                // ðŸ“Ž File name preview
                                const fileInput = document.getElementById("imageUpload");
                                const fileName = document.getElementById("fileName");
                                fileInput.addEventListener("change", () => {
                                fileName.textContent = fileInput.files[0]?.name || "";
                                });
                            </script>
                            </dialog>                            
                            </div>
                            {%endif%}
                            {% else %}
                            <a href="{% url 'return_book' r.book.id r.id %}"
                                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-red-600 hover:bg-red-700 transition-colors duration-200">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                                </svg>
                                Return Now
                            </a>
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Mobile Card View -->
        <div class="lg:hidden divide-y divide-gray-200">
            {% for r in b %}
            <div class="p-4 sm:p-6 hover:bg-gray-50 transition-colors duration-200">
                <!-- Book Info -->
                <div class="flex items-start space-x-4 mb-4">
                    <div class="w-16 h-20 sm:w-20 sm:h-24 flex-shrink-0 rounded-lg overflow-hidden">
                        <img src="{{ r.book.book_image.url }}" alt="{{ r.book.title }}"
                            class="w-full h-full object-cover">
                    </div>
                    <div class="flex-1 min-w-0">
                        <div class="text-sm font-medium text-gray-900 mb-1">{{ r.book.title }}</div>
                        <div class="text-sm text-gray-500 mb-2">{{ r.book.author }}</div>
                        <div class="text-xs text-gray-400">ID: {{ r.id }}</div>
                    </div>
                    <!-- Status Badge -->
                    <div class="flex-shrink-0">
                        {% if r.return_status != "Not" %}
                        <span
                            class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Returned
                        </span>
                        {% else %}
                        <span
                            class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Not Returned
                        </span>
                        {% endif %}
                    </div>
                </div>

                <!-- Dates -->
                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <p class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Borrowed</p>
                        <p class="text-sm text-gray-900">{{ r.borrow_date|date:"M d, Y" }}</p>
                        <p class="text-xs text-gray-500">{{ r.borrow_date|time:"g:i A" }}</p>
                    </div>
                    <div>
                        <p class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Return Date</p>
                        <p class="text-sm text-gray-900">{{ r.return_date|date:"M d, Y" }}</p>
                        <p class="text-xs text-gray-500">{{ r.return_date|time:"g:i A" }}</p>
                    </div>
                </div>

                <!-- Action -->
                <div class="flex justify-end">
                    {% if r.return_status != "Not" %}
                    <span
                        class="inline-flex items-center px-3 py-1 rounded-lg text-sm font-medium bg-green-100 text-green-800">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7">
                            </path>
                        </svg>
                        Completed
                    </span>
                    {% else %}
                    <a href="{% url 'return_book' r.book.id r.id %}"
                        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-red-600 hover:bg-red-700 transition-colors duration-200">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                        </svg>
                        Return Now
                    </a>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% else %}
    <!-- Empty State -->
    <div class="text-center py-12 sm:py-16">
        <div class="mx-auto w-20 h-20 sm:w-24 sm:h-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
            <svg class="w-10 h-10 sm:w-12 sm:h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253">
                </path>
            </svg>
        </div>
        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-2">No Borrow History Found</h3>
        <p class="text-sm sm:text-base text-gray-600 mb-6 sm:mb-8 max-w-md mx-auto px-4">
            You haven't borrowed any books yet. Start exploring our collection and borrow your first book!
        </p>
        <a href="{% url 'home' %}"
            class="inline-flex items-center px-4 sm:px-6 py-2 sm:py-3 border border-transparent text-sm sm:text-base font-medium rounded-lg text-white bg-gradient-to-r from-primary to-secondary hover:from-blue-600 hover:to-purple-600 transition-all duration-200">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            Browse Books
        </a>
    </div>
    {% endif %}
</div>









{% endblock %}